@model PaldromeAppMVC.Models.Palindrome


<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-12 col-md-7">
            <h2 class="txt-color border-bottom">Paldrome App</h2>
            <p>
                A palindrome is a word, phrase, or other sequence of
                characters that reads the same backward as forward, such as
                madam or racecar. We have added a few examples for you to try.
                We are not checking for numbers in this case.
            </p>
            <h2 class="txt-color border-bottom">Single Word Palindromes</h2>
            <ul>
                <li>Anna</li>
                <li>Civic</li>
                <li>Kayak</li>
                <li>Level</li>
                <li>Redder</li>
            </ul>
            <h2 class="txt-color border-bottom">Multiple Word Palindromes</h2>
            <ul>
                <li>Don't nod.</li>
                <li>Red rum, sir, is murder</li>
                <li>Top spot</li>
                <li>Was it a cat I saw?</li>
                <li>No lemon, no melon</li>
            </ul>
        </div>
        <div class="col-12 col-md-5">
            <h3 class="txt-color">Enter</h3>
            @* Form goes here *@
            <form class="row gy-2 gx-3" asp-action="Reverse" asp-controller="Home" method="post">
                <div class="col-12">
                    <input asp-for="InputWord" value="@Model.InputWord" type="text" placeholder="taco cat!09" aria-label="user string" class="form-control">
                </div>
                <div class="col">
                    <button class="btn-primary rounded" type="submit" id="check">Check</button>
                </div>
            </form>
            <h2 class="mt-4 border-bottom">Reversed Word.</h2>
            <div class="col">
                <p class="form-control">@Model.RevWord</p>
            </div>
           <h2 class="mt-4 border-bottom">Result</h2>
            <div class="table-responsive">
                <p id="results">
                    @Model.Message
                </p>
            </div>
        </div>
    </div>
</div>